#!/usr/bin/env bash


################################################################################
### Head: Init
##

THE_BASE_DIR_PATH=$(cd -P -- "$(dirname -- "$0")" && pwd -P)
THE_BASE_DIR_PATH="$THE_BASE_DIR_PATH/../ext"
source "$THE_BASE_DIR_PATH/init.sh"

##
### Tail: Init
################################################################################


################################################################################
### Head: Util_SubCmd
##

sub_cmd_find_function_name () {
	echo "sub_run_$1"
}

##
### Tail: Util_SubCmd
################################################################################


################################################################################
### Head: Model
##

demo_list () {
	echo "demo_list"
	echo "$@"
}

demo_run_test_pass () {

	## $ ./demo-ctrl test '1   2' ' 3' "  4"

	echo
	echo '================================================================================'
	echo

	echo '	demo_run_test_pass'

	echo
	echo '================================================================================'
	echo

	echo "$1"
	echo "$2"
	echo "$3"

	echo
	echo '================================================================================'
	echo

	echo $1
	echo $2
	echo $3

	echo
	echo '================================================================================'
	echo

}

##
### Tail: Model
################################################################################


################################################################################
### Head: SubCmd
##

sub_run_help () {
	main_usage "$@"
}

sub_run_list () {
	echo "sub_run_list"
	demo_list "$@"
}

sub_run_get () {
	echo "sub_run_get"
}

sub_run_set () {
	echo "sub_run_set"
	echo "$@"
}


sub_run_reset () {
	echo "sub_run_reset"
}


sub_run_test_pass () {
	## $ ./demo-ctrl test_pass '1   2' ' 3' "  4"
	demo_run_test_pass "$@"
}

sub_run_test () {

	## $ ./demo-ctrl test '1   2' ' 3' "  4"


	echo
	echo '================================================================================'
	echo

	echo '	sub_run_test'

	echo
	echo '================================================================================'
	echo

	echo "$1"
	echo "$2"
	echo "$3"

	echo
	echo '================================================================================'
	echo

	echo $1
	echo $2
	echo $3

	echo
	echo '================================================================================'
	echo

}


##
### Tail: SubCmd
################################################################################


################################################################################
### Head: Main
##

main_usage () {
	##local cmd_name="$0"
	local cmd_name="demo-ctrl"

cat << EOF
Usage:
	$ $cmd_name [action]

Example:

	$ $cmd_name
	$ $cmd_name help

	$ $cmd_name list
	$ $cmd_name get
	$ $cmd_name set some_value
	$ $cmd_name reset


	$ $cmd_name test '1   2' ' 3' "  4"
	$ $cmd_name test_pass '1   2' ' 3' "  4"


Debug:
	$ export DEBUG_TOOL=true

EOF

}

main_check_args_size () {
	if [ $1 -le 0 ]; then
		shift
		main_run_default_sub_cmd "$@"
		exit 1
	fi
}

main_run_default_sub_cmd () {
	main_usage "$@"
}

main_run_sub_cmd () {

	local sub_cmd="$1"

	shift

	local function_name=$(sub_cmd_find_function_name "$sub_cmd")

	## if ! command -v $function_name > /dev/null; then
	if ! type -p $function_name > /dev/null; then
		util_debug_echo "[Debug] sub_cmd_function_not_exist: sub_cmd=$sub_cmd; function_name=$function_name"

		echo

		main_run_default_sub_cmd "$@"

		return 1

	fi

	"$function_name" "$@" ## run sub cmd function


}

## Start
main_check_args_size $# "$@"

main_run_sub_cmd "$@"

##
### Tail: Main
################################################################################
